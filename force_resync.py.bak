import discord
from discord.ext import commands
import asyncio
import os
from dotenv import load_dotenv

load_dotenv()

bot = commands.Bot(command_prefix=None, intents=discord.Intents.default())
guild = discord.Object(id=1139705914803359764)

@bot.event
async def on_ready():
    print(f"Force resyncing bot {bot.user.name} ({bot.user.id}) to guild {guild.id}")
    
    # Clear guild commands
    bot.tree.clear_commands(guild=guild)
    await bot.tree.sync(guild=guild)
    
    # Load cog and resync
    await bot.load_extension("cogs.all_winners")
    bot.tree.copy_global_to(guild=guild)
    synced = await bot.tree.sync(guild=guild)
    
    print(f"Synced {len(synced)} commands to guild")
    await bot.close()

asyncio.run(bot.start(os.getenv("DISCORD_TOKEN")))
